<div class="container my-4">
  <div class="row">
    <h1 class="text-center fw-bold mb-4">Welcome, {{username}}!</h1>
  </div>
</div>

<div class="container my-4">
  <div class="row g-4">
    <!-- Left Panel -->
    <div class="col-md-4 col-12">
      <div class="card shadow-sm rounded-4">
        <div class="card-body">
          <h3 class="card-title  mb-4">Features</h3>
          <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex align-items-center">
              <i class="bi bi-play-circle-fill text-success me-2"></i>
              <strong>Exercise Page:</strong> &nbsp; Videos to various exercises.
            </li>
            <li class="list-group-item d-flex align-items-center">
              <i class="bi bi-graph-up-arrow text-warning me-2"></i>
              <strong>Tracking Page:</strong>  &nbsp;Track your progress.
            </li>
            <li class="list-group-item d-flex align-items-center">
              <i class="bi bi-pencil-square text-info me-2"></i>
              <strong>My Workouts:</strong>&nbsp;  Edit and view saved workouts.
            </li>
            <li class="list-group-item d-flex align-items-center">
              <i class="bi bi-calendar-check-fill text-danger me-2"></i>
              <strong>My Plan:</strong>&nbsp;  Your weekly schedule.
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Right Panel -->
    <div class="col-md-8 col-12">
      <div class="card shadow-sm rounded-4">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 >Today's Workout</h3>
            <h4 class="text-muted">{{date}}</h4>
          </div>

          {{#if scheduledSets.length}}
            {{#each scheduledSets}}
              <div class="mb-3 p-3 border rounded-3 bg-light">
                <div class="d-flex justify-content-between align-items-center mb-2">
                  <h6 class="mb-0 text-dark">{{workout_name}}</h6>
                  <small class="text-muted">
                    {{start_time}} ({{duration_hours}}h {{duration_minutes}}m)
                  </small>
                </div>
                {{#if exercises.length}}
                  <ul class="list-unstyled small text-dark">
                    {{#each exercises}}
                      <li>â€¢ <strong>{{exercise_name}}</strong> ({{muscle_target}})</li>
                    {{/each}}
                  </ul>
                {{else}}
                  <p class="text-muted small mb-0">No exercises found.</p>
                {{/if}}
              </div>
            {{/each}}
          {{else}}
            <div class="text-center py-5">
              <p class="text-muted">No workouts scheduled for today.</p>
            </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
