{{>message}}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
        <form action="/login" method="post" class="border border-secondary rounded p-4" >
            <h1 class="text-center">Lift Track Login</h1>
            <div class="form-group mt-3">
                <label for="username">Username</label>
                <input class="form-control" id="username" name="username">
            </div>
        
            <div class="form-group mt-3">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" name="password">
            </div>
            <br />

            <button type="submit" class="btn w-100 bg-light-green mt-2">Login</button>

            <hr class="bg-graphite mt-4">

            <p class="mt-3 text-center">
                <p class="text-center">Need an Account?</p>
                <a href="/register" class="btn w-100 btn-outline-light-green login-secondary-btn-green">Register</a>
            </p>
        </form>
        </div>
    </div>
</div>
