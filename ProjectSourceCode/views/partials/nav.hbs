          {{else}}
            <a class="nav-link" href="/login">Exercises</a>
          {{/if}}
        </li>
        <li class="dropdown">
          <button class="dropbtn">My Fitness</button>
          <div class="dropdown-content">
            {{#if user}}
              <a class="nav-link" href="/myplan">My Plan</a>
            {{else}}
              <a class="nav-link" href="/login">My Plan</a>
            {{/if}}
            {{#if user}}
              <a class="nav-link" href="/tracking">Tracking/Analytics</a>
            {{else}}
              <a class="nav-link" href="/login">Tracking/Analytics</a>
            {{/if}}
