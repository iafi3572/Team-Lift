<style>
  .navbar { background-color: #333; } .navbar a { float: left; font-size: 16px;
  color: rgb(0, 0, 0); text-align: center; padding: 16px; text-decoration: none;
  } .dropbtn { color: black; padding: 16px; font-size: 16px; border: none; }
